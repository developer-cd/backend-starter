# App
PORT=4000
NODE_ENV=development
APP_URL=http://localhost:4000

# JWT
JWT_ACCESS_SECRET=change_this_access_secret
JWT_REFRESH_SECRET=change_this_refresh_secret
ACCESS_TOKEN_EXPIRES=15m
REFRESH_TOKEN_EXPIRES=30d

# Mongo
MONGO_URI=mongodb://mongo:27017/appdb

# SQL (Postgres)
SQL_DIALECT=postgres
SQL_HOST=postgres
SQL_PORT=5432
SQL_USER=postgres
SQL_PASS=postgres
SQL_DB=appdb

# SMTP (nodemailer)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=strongpassword
EMAIL_FROM="App <no-reply@example.com>"

# Stripe
STRIPE_SECRET_KEY=sk_test_...

# Other
LOG_LEVEL=info


# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Refresh token / verification
REFRESH_TOKEN_EXPIRES=30d
REFRESH_TOKEN_STORE_PREFIX=refresh:
ROTATE_REFRESH_TOKENS=true

# Email verification token
EMAIL_VERIFICATION_SECRET=change_this_verify_secret
EMAIL_VERIFICATION_EXPIRES=1d
FRONTEND_VERIFY_URL=https://app.example.com/auth/verify-email?token=